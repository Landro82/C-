	char antwort;
	cout <<"Bitte antworten Sie mit Ja oder Nein: ";
	cin>> antwort;
	if(antwort == 'n' || antwort == 'N' ){
		cout <<"Sie haben mit Nein geantwortet" << endl;
	}
	else if(antwort == 'j' || antwort == 'J'){
		cout <<" Sie haben mit Ja geantwortet" << endl;
	}
	else{
